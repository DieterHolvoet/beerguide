<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/fragment_recent_beers_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_recent_beers_recycler"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/recycler_padding_bottom"
        android:paddingLeft="@dimen/recycler_padding"
        android:paddingTop="@dimen/recycler_padding"
        android:paddingRight="@dimen/recycler_padding" >

    </android.support.v7.widget.RecyclerView>

</android.support.v4.widget.SwipeRefreshLayout>